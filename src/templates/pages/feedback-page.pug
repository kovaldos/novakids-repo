extends ../template_copy

block variables
    - var title = 'Обратная связь'
    - var contactForm = true

block content
    main
        .wrapper
            section.feedback
                a.award__logo.feedback__logo(href="index.html")    
                    picture
                        source(srcset="./assets/images/Vector Smart Object.webp" type="image/webp") 
                        img(src="./assets/images/Vector Smart Object.svg" alt="logo-speak-for-miles")
                form(action="#").feedback__form 
                    p.feedback__text Введите адрес электронной почты, на который будет выслан промокод
                    p.feedback__text_email E-mail
                    input.feedback__input(type="email" placeholder="example@gmail.com")
                    button.feedback__btn(type="button")
                        a(href="try.html") Отправить       